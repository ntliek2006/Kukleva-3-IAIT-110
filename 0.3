const int buttonPin = 2;
const int ledPin = 13;

void setup() {
  pinMode(ledPin, OUTPUT);
  pinMode(buttonPin, INPUT_PULLUP); 
  Serial.begin(9600);
}

void loop() {
  int buttonState = digitalRead(buttonPin);
  
  if (buttonState == LOW) { 
    digitalWrite(ledPin, HIGH);
    Serial.println("Кнопка нажата - светодиод горит");
  } else {
    digitalWrite(ledPin, LOW);
    Serial.println("Кнопка отпущена - светодиод погашен");
  }
  delay(100);
}
